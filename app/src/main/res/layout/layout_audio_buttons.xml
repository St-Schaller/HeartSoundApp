        <ImageButton
            android:id="@+id/evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ib_play_pause"
            android:layout_alignStart="@id/ib_play_pause"
            android:layout_alignEnd="@id/ib_play_pause"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/image_replay_button"
            android:onClick="evaluate"
            android:scaleType="center"
            android:src="@mipmap/ic_heart_foreground"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/ib_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/record"
            android:background="@android:color/transparent"
            android:contentDescription="@string/image_play_pause"
            android:fillColor="@color/white"
            android:onClick="playPause"
            android:src="@drawable/ic_play_red_48dp"
            android:tint="@android:color/white" />


        <ImageButton
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:adjustViewBounds="true"
            android:layout_alignStart="@id/ib_play_pause"
            android:layout_alignEnd="@id/ib_play_pause"
            android:background="@android:color/transparent"
            android:contentDescription="@string/image_play_pause"
            android:fillColor="@color/white"
            android:onClick="record"
            android:src="@mipmap/ic_stethoscope_foreground"
            android:tint="@android:color/white" />
    </RelativeLayout>
</RelativeLayout>