<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/LightGreen"
    android:layout_centerVertical="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
w
    <ImageButton
        android:id="@+id/replay"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/image_replay_button"
        android:onClick="replay"
        android:layout_below="@id/ib_play_pause"
        android:src="@drawable/ic_replay_red_48dp" />

        <ImageButton
            android:id="@+id/evaluate"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/image_replay_button"
            android:onClick="evaluate"
            android:layout_below="@id/replay"
            android:tint="@android:color/white"
            android:src="@mipmap/ic_heart_foreground" />

        <ImageButton
            android:id="@+id/ib_play_pause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/image_play_pause"
            android:layout_below="@id/record"
            android:onClick="playPause"
            android:fillColor="@color/white"
            android:tint="@android:color/white"
            android:src="@drawable/ic_play_red_48dp" />


    <ImageButton
        android:id="@+id/record"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/image_play_pause"
        android:onClick="record"
        android:fillColor="@color/white"
        android:tint="@android:color/white"
        android:src="@mipmap/ic_stethoscope_foreground" />
    </RelativeLayout>
</RelativeLayout>